<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Añade aquí tu color de fondo. -->
        <item name="android:windowBackground">#001928</item>
        <!-- Añade aquí el color de la letra. -->
        <item name="android:textColor">@android:color/white</item>
        <!-- Color de la estrella -->
        <item name="starColor">@android:color/white</item>
        <!-- Color del spinner -->
        <item name="spinnerBackgroundColor">#001928</item>
        <item name="spinnerTextColor">@android:color/white</item>


    </style>
    <style name="Theme.MyApplication.WhiteBackground" parent="Base.Theme.MyApplication">
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Añade aquí el color de la letra. -->
        <item name="android:textColor">#001928</item>
        <!-- Color de la estrella -->
        <item name="starColor">#000000</item> <!-- Negro -->
        <!-- Color del spinner -->
        <item name="spinnerBackgroundColor">@android:color/white</item>
        <item name="spinnerTextColor">#001928</item>
    </style>
    <style name="MyPopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#000000</item> <!-- Color de texto azul -->
        <item name="android:background">#FFFFFF</item> <!-- Color de fondo rojo -->
    </style>
    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyApplication.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="MyMenuItemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#000000</item> <!-- Color de texto blanco -->
    </style>


</resources>